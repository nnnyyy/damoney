<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="item"
            type="com.dacom.damoney.Sign.SignupActivity" />
    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.dacom.damoney.Sign.SignupActivity"
        android:focusableInTouchMode="true"
        android:background="@color/colorMain"
        >
        <LinearLayout
            android:id="@+id/top_bar"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="48dp"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="회원가입"
                android:textColor="@color/colorMainFont"
                android:textSize="24sp" />
        </LinearLayout>
        <ScrollView
            android:layout_below="@id/top_bar"
            android:id="@+id/sv_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="아이디"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:textColor="@color/colorMainFont"
                    />
                <EditText
                    android:id="@+id/et_id"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="center"
                    style="@style/AppTheme.SignUpEdit"
                    android:hint="아이디"/>
                <TextView
                    android:id="@+id/eth_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.SignUpEditHelper"
                    />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="비밀번호"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:textColor="@color/colorMainFont"
                    />
                <EditText
                    android:id="@+id/et_pw"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPassword"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="center"
                    android:hint="비밀번호"
                    style="@style/AppTheme.SignUpEdit"
                    />
                <TextView
                    android:id="@+id/eth_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.SignUpEditHelper"
                    />
                <EditText
                    android:id="@+id/et_pwre"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textPassword"
                    android:background="@drawable/rounded_edittext"
                    android:gravity="center"
                    android:hint="비밀번호 재확인"/>
                <TextView
                    android:id="@+id/eth_pwre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/AppTheme.SignUpEditHelper"
                    />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="휴대폰 인증"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:textColor="@color/colorMainFont"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <EditText
                        android:id="@+id/et_phone_auth"
                        android:layout_width="0dp"
                        android:layout_weight="7"
                        android:layout_height="35dp"
                        android:inputType="textCapWords"
                        android:background="@drawable/rounded_edittext"
                        style="@style/AppTheme.SignUpEdit"
                        android:hint="휴대폰 인증"/>
                    <Button
                        android:id="@+id/btn_get_authnumber"
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="3"
                        android:background="@drawable/rounded_button"
                        style="@style/AppTheme.SignUpEdit"
                        android:layout_marginLeft="5dp"
                        android:text="인증번호 받기"
                        android:textColor="@color/colorMainFont"
                        />
                </LinearLayout>
                <EditText
                    android:id="@+id/et_phone_auth_2"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_edittext"
                    android:hint="인증번호 확인"
                    style="@style/AppTheme.SignUpEdit"
                    />
                <Button
                    android:id="@+id/btn_verify_authnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="인증번호 확인"
                    android:background="@drawable/rounded_button"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorMainFont"
                    />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="추천인"
                    android:gravity="left"
                    android:textSize="20sp"
                    android:textColor="@color/colorMainFont"
                    />
                <EditText
                    android:id="@+id/et_recommand"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:inputType="textCapWords"
                    android:background="@drawable/rounded_edittext"
                    style="@style/AppTheme.SignUpEdit"
                    android:hint="추천인"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="5dp"
                    >
                    <CheckBox
                        android:id="@+id/cbTerms1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="서비스 이용약관 동의"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="이용약관"
                        android:background="@drawable/rounded_button"
                        android:textColor="@color/colorMainFont"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/cbTerms2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text="개인정보 취급 동의"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="35dp"
                        android:layout_weight="4"
                        android:gravity="center"
                        android:text="이용약관"
                        android:background="@drawable/rounded_button"
                        android:textColor="@color/colorMainFont"
                        />
                </LinearLayout>
                <Button
                    android:id="@+id/btn_signup"
                    android:layout_width="200dp"
                    android:layout_height="35dp"
                    android:text="가입하기"
                    android:layout_gravity="center"
                    android:onClick="@{item::onSignUp}"
                    android:background="@drawable/rounded_button"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorMainFont"
                    />
            </LinearLayout>
        </ScrollView>
        <ProgressBar
            android:id="@+id/circle_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:minHeight="50dp"
            android:minWidth="50dp"
            />
    </RelativeLayout>
</layout>