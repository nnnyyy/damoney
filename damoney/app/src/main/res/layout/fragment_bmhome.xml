<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dacom.damoney.BMHomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="@drawable/mainback"
        >
        <!--상단 바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_margin="8dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@drawable/home_user_profile"
                    />
                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:textSize="23dp"
                    android:text="Lv. 10"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textColor="#624949"

                    />
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="noname"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:textSize="23dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#624949"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            >
            <com.daasuu.library.FPSTextureView
                android:id="@+id/animation_texture_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:FPSAnimator_fps="24"
                android:padding="20dp"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:id="@+id/bonus_item"
                android:layout_width="110dp"
                android:layout_height="240dp"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerVertical="true"
                android:layout_margin="8dp"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="보너스 상품"
                    android:gravity="center"/>
                <com.dacom.damoney.VerticalScrollView
                    android:id="@+id/vsv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                </com.dacom.damoney.VerticalScrollView>
            </LinearLayout>
        </RelativeLayout>

        <!--하단 상태바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:scaleType="fitCenter"
                        android:src="@drawable/icon_coin" />

                    <TextView
                        android:id="@+id/tvPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="6dp"
                        android:gravity="center_vertical"
                        android:text="0"
                        android:textSize="25dp"
                        android:textStyle="bold"
                        tools:text="10000" />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/exp_levelup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:gravity="bottom"
                        android:text="다음 레벨업까지 30xp 남음"
                        android:textColor="#54a48c"
                        android:textStyle="bold" />
                </RelativeLayout>
            </LinearLayout>


            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:layout_margin="4dp"
                android:id="@+id/expbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                app:rcBackgroundColor="#777777"
                app:rcProgressColor="#ffffff"
                app:rcRadius="2dp"
                ></com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#777777"
        ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="176dp"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_show_ads"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/icon_1"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_margin="24dp"
            />
        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#777777"
                ></View>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/btn_go_premium_map"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_2"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_margin="8dp"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#777777"
                    ></View>
                <ImageButton
                    android:id="@+id/btn_coupon"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_3"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_margin="8dp"
                    />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="#777777"
                    ></View>
                <ImageButton
                    android:id="@+id/btn_ads_distribute"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/icon_4"
                    android:scaleType="fitCenter"
                    android:background="@android:color/transparent"
                    android:layout_margin="8dp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>
</layout>