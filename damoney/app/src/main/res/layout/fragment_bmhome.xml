<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dacom.damoney.BMHomeFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:orientation="vertical"
        android:background="@drawable/background_yellow"
        >
        <!--상단 바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/icon_coin"
                        android:scaleType="fitCenter"
                        />
                    <TextView
                        android:layout_marginLeft="6dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/tvPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:textSize="35dp"
                        android:text="0"
                        tools:text="10000"
                        app:font="custom2"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            >
            <com.daasuu.library.FPSTextureView
                android:id="@+id/animation_texture_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:FPSAnimator_fps="24"
                android:padding="20dp"
                android:layout_gravity="center"
                />
            <ImageView
                android:id="@+id/gachabox"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/gachabox"
                android:layout_margin="8dp"
                />
        </RelativeLayout>

        <!--하단 상태바-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="6">
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="다람쥐 쳇바퀴"
                    android:textStyle="bold"
                    android:gravity="bottom"
                    android:textSize="18dp"
                    android:layout_marginLeft="5dp"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/exp_levelup"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="8dp"
                        android:text="다음 레벨업까지 30 남음"
                        android:textColor="#aaaaaa"
                        android:gravity="bottom"
                        />
                </RelativeLayout>
            </LinearLayout>
            <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
                android:layout_margin="4dp"
                android:id="@+id/expbar"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                app:rcBackgroundColor="#777777"
                app:rcProgressColor="#ffffff"
                ></com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar>
        </LinearLayout>
    </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777777"
            ></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:orientation="vertical">
        <ImageButton
            android:id="@+id/btn_show_ads"
            android:layout_width="match_parent"
            android:layout_height="84dp"
            android:src="@drawable/icon_1"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_margin="16dp"
            android:padding="16dp"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777777"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/btn_go_premium_map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_2"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_margin="8dp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#777777"
                ></View>
            <ImageButton
                android:id="@+id/btn_coupon"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_3"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_margin="8dp"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#777777"
                ></View>
            <ImageButton
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/icon_4"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:layout_margin="8dp"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
    </RelativeLayout>
</layout>